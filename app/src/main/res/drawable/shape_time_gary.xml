<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 间隔 padding-->
    <padding
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="2dp" /><!-- 各方向的间隔 -->

    <!-- 大小 size-->
    <size
        android:width="50dp"
        android:height="50dp" /><!-- 宽度和高度 -->

    <!-- 填充 solid-->
    <solid android:color="@color/gary" /><!-- 填充的颜色 -->

    <!-- 描边 stroke-->
    <stroke
        android:width="2dp"
        android:color="@color/mainBlue" />

</shape>