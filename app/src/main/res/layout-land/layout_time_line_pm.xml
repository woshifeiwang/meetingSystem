<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="45dp"
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="13:00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="14:00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15:00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="16:00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="17:00" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            style="@style/timeLineText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="18:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_pm"
        android:orientation="horizontal">

        <Space
            android:layout_marginLeft="45dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />




        <ImageView
            android:id="@+id/time_13"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line" />

        <ImageView
            android:id="@+id/time_13_1"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line2" />

        <ImageView
            android:id="@+id/time_14"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line" />

        <ImageView
            android:id="@+id/time_14_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line2" />

        <ImageView
            android:id="@+id/time_15"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line" />

        <ImageView
            android:id="@+id/time_15_1"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line2" />

        <ImageView
            android:id="@+id/time_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line" />

        <ImageView
            android:id="@+id/time_16_1"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line2" />

        <ImageView
            android:id="@+id/time_17"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line" />

        <ImageView
            android:id="@+id/time_17_1"
            android:layout_width="0dp"
            android:paddingLeft="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/selectable_time_line2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#E6DDDC"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>